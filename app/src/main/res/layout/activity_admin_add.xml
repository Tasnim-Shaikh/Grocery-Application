<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminAddActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Add New Products"
        app:titleMarginStart="10dp" />
    <EditText
        android:id="@+id/admin_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/toolbar1"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:hint="Enter Product Name"
        android:inputType="text"
        android:textSize="22dp"
        android:layout_margin="10dp"/>

    <Spinner
        android:id="@+id/admin_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/admin_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:gravity="center"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/admin_price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/admin_type"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Product Price"
        android:inputType="text"
        android:textSize="22dp" />


    <EditText
        android:id="@+id/admin_des"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/admin_price"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Product Description"
        android:inputType="text"
        android:textSize="22dp" />


    <EditText
        android:id="@+id/admin_qty"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/admin_des"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="37dp"
        android:hint="Product qty"
        android:inputType="text"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/admin_unit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/admin_des"
        android:layout_marginStart="10dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="37dp"
        android:hint="Product Unit"
        android:inputType="text"
        android:textSize="22dp" />

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/admin_unit"
        android:layout_marginTop="3dp"
        android:text="Select File from your Device" />

    <TextView
        android:id="@+id/img_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn2"
        android:layout_below="@+id/btn"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:text="@string/image_not_selected"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />



    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Upload Product"
        android:textColor="@color/white"
        android:background="#DD3535"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>



</RelativeLayout>